@using ExercicePokemon.Models;
@model Pokemon;
@{
    Layout = "_Layout";
}

<div class="row">
</div>

<div class="row">
    <div class="col">
        <h1 class="text-uppercase">@Model.Nom</h1>
        <img width="125" src="~/images/@(Model.Id).png" />
        <div> Id: @Model.Id</div>
        <div> Nom: @Model.Nom</div>
        <div> Type: @Model.Type1</div>
        @if(Model.Type2 != "")
        {
            <div>Type 2: @Model.Type2 </div>
        }

        @if(Model.Legendaire == true)
        {
            <div>EST UN POKÉMON LÉGENDAIRE</div>
        }
        <br>
        <br>
        <div>@Model.Description</div>
    </div>

    <div class="col">
        <h2 class="text-uppercase">Statistiques</h2>
        <div>HP: @Model.HP </div>
        <div>Vitesse: @Model.Vitesse </div>
        <div>Total: @Model.Total </div>
        <h2 class="my-5 text-uppercase">Attaque/Défense</h2>
        <table id="tableauStatistique" class="table">
            <thead>
                <tr>
                    <th class="transparent"></th>
                    <th class="couleurDark">Attaque</th>
                    <th class="couleurDark">Défense</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="couleurDark">De base</td>
                    <td>@Model.Attaque</td>
                    <td>@Model.Defense</td>
                </tr>
                <tr>
                    <td class="couleurDark">Spécial</td>
                    <td>@Model.SpecialAttaque</td>
                    <td>@Model.SpecialDefense</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
